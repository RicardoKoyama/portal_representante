<h1>Clientes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Plano</th>
      <th>Usu√°rios</th>
      <th>Tabela</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% clientes.forEach(c => { %>
      <tr>
        <td>
          <a href="/clientes/<%= c.id %>"><%= c.nome %></a>
        </td>
        <td><%= c.plano %></td>
        <td><%= c.limite_telefones %></td>
        <td>
          <% if (c.tabela_codigo) { %>
            <span class="badge badge-success"><%= c.tabela_codigo %></span>
          <% } else { %>
            <span class="badge badge-warning">Sem tabela</span>
          <% } %>
        </td>
        <td>
          <%= c.ativo ? 'Ativo' : 'Inativo' %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
